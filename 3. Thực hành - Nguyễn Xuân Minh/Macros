

#/////////////////////////////////////////////////////////#
# --------------------macro in chuoi----------------------#
.macro	Put_String_To_Console (%str_name)
	li $v0, 4
	la $a0, %str_name 					# Lay dia chi thay the trong data segment roi thay vao $a0
	syscall
.end_macro
#/////////////////////////////////////////////////////////#

#/////////////////////////////////////////////////////////#
# --------------------macro in chuoi----------------------#
.macro	Read_From_Users
	add $v0, $zero, 5
	syscall
.end_macro
#/////////////////////////////////////////////////////////#


